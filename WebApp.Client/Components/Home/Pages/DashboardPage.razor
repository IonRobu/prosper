@inherits Page
@page "/home"
@page "/home/{Route}"
@page "/home/{Route}/{Id:int}"

<MxPage Title="Dashboard">
	<ViewRoute Name="@RouteIndex">
		<TelerikTileLayout Columns="6"
						   ColumnWidth="300px"
						   RowHeight="235px"
						   Reorderable="false"
						   Resizable="false">
			<TileLayoutItems>
				<TileLayoutItem HeaderText="Statistics" ColSpan="6">
					<Content>
						<TransactionStatisticsView />
					</Content>
				</TileLayoutItem>
				<TileLayoutItem HeaderText="Summary" RowSpan="3" ColSpan="3">
					<Content>
						<TransactionSummaryList />
					</Content>
				</TileLayoutItem>
				<TileLayoutItem HeaderText="Analytics" RowSpan="3" ColSpan="3">
					<Content>
						<TransactionChartView />
					</Content>
				</TileLayoutItem>
			</TileLayoutItems>
		</TelerikTileLayout>
	</ViewRoute>
</MxPage>