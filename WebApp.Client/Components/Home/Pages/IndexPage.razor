@inherits Page
@page "/home"
@page "/home/{Route}"
@page "/home/{Route}/{Id:int}"

<MxPage Title="Dashboard">
	<ViewRoute Name="@RouteIndex">
		<TransactionList OnAdd='async () => await GoToFormAsync(0)'
					  OnEdit='async(id) => await GoToFormAsync(id)' />
	</ViewRoute>
	<ViewRoute Name="@RouteTransactionForm">
		<TransactionForm Id="Id" OnClosed="async () => await Navigation.GoBackAsync()" />
	</ViewRoute>
</MxPage>