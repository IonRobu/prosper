@page "/password-recovery"
@page "/password-recovery/{Route}"
@inherits Page
@layout EmptyLayout

<Info Translate="x => I18n.Message.Get(x)" />
<div class="main d-flex justify-content-center w-100">

	<div>
		<small class="float-end">v. @Constants.Version</small>
	</div>
	<main class="content d-flex p-0">
		<div class="container d-flex flex-column">
			<div class="row h-100">
				<div class="col-sm-10 col-md-8 col-lg-6 mx-auto d-table h-100">
					<div class="d-table-cell align-middle">

						<div class="text-center mt-4">
							<h1 class="h2">@I18n.Title.Application_Title</h1>
							<p class="lead">
								@I18n.Title.Application_Description
							</p>
						</div>

						<PasswordRecoveryForm OnLogin="async () => await GoToLoginAsync()" />

					</div>
				</div>
			</div>
		</div>
	</main>
</div>