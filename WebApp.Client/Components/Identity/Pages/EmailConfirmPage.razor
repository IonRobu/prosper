@page "/email-confirm"
@page "/email-confirm/{Route}"
@inherits Page

<Info Translate="x => I18n.Message.Get(x)" />
<div class="row h-100">
	<div class="col-sm-10 col-md-6 col-lg-4 mx-auto d-table h-100">
		<div class="d-table-cell align-middle">
			<div class="card">
				<div class="card-body">
					<div class="text-center">
						<h2 class="font-weight-bolder text-danger">@I18n.Title.Application_Title</h2>
						<small>
							@I18n.Title.Application_Description
						</small>
					</div>
					<div class="mt-2">
						<EmailConfirmDetail 
							Token="@Token" 
							Email="@Email" 
							OnPasswordConfirm="async () => await GoToPasswordConfirmAsync()" />
					</div>
				</div>
			</div>
		</div>
	</div>
</div>