@inherits Page
@page "/application"
@page "/application/{Route}"
@page "/application/{Route}/{Id:long}"

<MxPage Title="@I18n.Title.Page_ApplicationList">
	<ViewRoute Name="@RouteIndex">
		<ApplicationList OnDetail="async (long id) => await GoToDetailAsync(id)" />
	</ViewRoute>
	<ViewRoute Name="@RouteApplicationDetail">
		<TelerikTabStrip>
			<TabStripTab Title="Details">
				<ApplicationDetail Id="Id"
								   OnClosed="async () => await Navigation.GoBackAsync()" />
			</TabStripTab>
			<TabStripTab Title="Audit">
				TO DO
			</TabStripTab>
		</TelerikTabStrip>
	</ViewRoute>
</MxPage>