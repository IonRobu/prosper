@inherits ComponentBase

@if (!string.IsNullOrEmpty(Text))
{
	<TelerikButton OnClick="() => OnClick?.Invoke()"
				   Icon="@Icon"
				   Class="@CssClass"
				   FillMode="@FillMode" 
				   Rounded="@ThemeConstants.Button.Rounded.Full"
				   Size="@Size"
				   Title="@Tooltip"
				   ThemeColor="@Color"
				   Enabled="!Disabled">
		@Text
	</TelerikButton>
}
else
{
	<TelerikButton OnClick="() => OnClick?.Invoke()"
				   Icon="@Icon"
				   Class="@CssClass"
				   FillMode="@FillMode" 
				   Rounded="@ThemeConstants.Button.Rounded.Full"
				   Size="@Size"
				   Title="@Tooltip"
				   ThemeColor="@Color"
				   Enabled="!Disabled">
	</TelerikButton>
}